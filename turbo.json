{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": [
        "build/**",
        "tina/__generated__/**",
        "dist/**",
        "tokens-output/**",
        "storybook-static/**"
      ],
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["build"]
    },
    "typecheck": {
      "dependsOn": ["build"]
    },
    "test": {
      "dependsOn": ["build", "lint", "typecheck"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
