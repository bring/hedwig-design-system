    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "eslint-config-custom": "*",
    "hedwig-tsconfig": "*",
    "react": "^18.2.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@postenbring/hedwig-css": "*",
    "@postenbring/hedwig-tokens": "*",
    "clsx": "2.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
