{
  "name": "@postenbring/hedwig-react",
  "version": "2.2.1",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "@postenbring/hedwig-css/dist/index.css"
  ],
  "license": "MIT",
  "files": [
    "dist/**",
    "src/**"
  ],
  "scripts": {
    "build": "pnpm run --sequential /^build:.*/",
    "build:bundle": "tsup",
    "build:types": "tsc -p tsconfig.types.json",
    "dev": "pnpm run --parallel /^dev:.*/",
    "dev:bundle": "tsup --watch",
    "dev:types": "tsc -p tsconfig.types.json --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf .turbo node_modules dist"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "eslint-config-custom": "workspace:*",
    "hedwig-tsconfig": "workspace:*",
    "react": "^18.3.1",
    "react-dom": "18.3.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "@types/react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "@types/react-dom": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@postenbring/hedwig-css": "workspace:*",
    "@radix-ui/react-popover": "1.1.14",
    "@radix-ui/react-slot": "1.2.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/bring/hedwig-design-system",
  "repository": {
    "type": "git",
    "url": "https://github.com/bring/hedwig-design-system"
  },
  "keywords": [
    "hedwig",
    "posten",
    "bring",
    "react"
  ]
}
