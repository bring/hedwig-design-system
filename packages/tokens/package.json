    "tsx": "4.18.0",
    "typescript": "^5.5.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/bring/hedwig-design-system",
  "repository": {
    "type": "git",
    "url": "https://github.com/bring/hedwig-design-system"
