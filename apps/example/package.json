{
  "name": "example",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "wait-on ./node_modules/@postenbring/hedwig-css/dist/index.css ./node_modules/@postenbring/hedwig-react/dist/index.js && vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
